#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

PID=`pidof -o %PPID /usr/sbin/udhcpd`
case "$1" in
  start)
    stat_busy "Starting udhcpd daemon"
    [ -z "$PID" ] && /usr/sbin/udhcpd
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon udhcpd
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping udhcpd daemon"
    [ ! -z "$PID" ]  && poff -a &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon udhcpd
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"  
esac
exit 0
